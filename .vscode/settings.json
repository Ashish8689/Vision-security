{
    // Use Prettier as default code formatter and enable formatting on save
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,

    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true // Run ESLint on save
    },

    "editor.tabSize": 4,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 100
}
